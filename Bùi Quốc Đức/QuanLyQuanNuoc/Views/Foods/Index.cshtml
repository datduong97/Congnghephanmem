@model IEnumerable<QuanLyQuanNuoc.Models.Food>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FoodName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FoodCategory.CategoryFoodName)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FoodName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Image)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FoodCategory.CategoryFoodName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.IdFood }) |
                @Html.ActionLink("Details", "Details", new { id=item.IdFood }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.IdFood})
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
